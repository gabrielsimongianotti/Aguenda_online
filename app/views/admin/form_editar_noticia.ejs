<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<meta charset="UTF-8">

			<title>Formulário de edição de Notícia</title>
			
			<!-- JQuery -->
			<script src="js/jquery-2.2.1.js"></script>

			<!-- bootstrap - link cdn -->
			<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
		
			<!-- incluindo css -->
			<link href="css/style.css" rel="stylesheet">

			<!-- favicon -->
			<link rel="shortcut icon" href="images/favicon.ico" />
		</head>
	
	<body>
		
		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
					<img src="images/logo.png" />
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><a href="/" >HOME</a></li>
						<li><a href="/formulario">CADASTRAR</a></li>
					</ul>
				</div>
			</div>
		</nav>
		<div class="container">
		<h1>Editar</h1>
		<br />
		<% if (validacao) { %>
			
			<ul>
				<% for(var i = 0; i < validacao.length; i++) { %>
					<li>
						<%= validacao[i].msg %>
					</li>
				<% } %>
			</ul>
		<% } %>
		<div class="row">
	    	<div class="col-md-12">
				<form action="/noticias/editar?id_noticia=<%= noticia[0].id_noticia%>"  method="post" >
					<div class="form-group">
						<label for="titulo">Título</label>
						<input type="text" class="form-control" id="titulo" name="titulo" value="<%= noticia[0].titulo %>" placeholder="Título da Notícia" />
					</div>
					<label for="pwd">Resumo</label>
					<input type="text" class="form-control" id="resumo" name="resumo" value="<%=noticia[0].resumo%>" placeholder="Resumo da Notícia" />
					<br />
					<label>Nome autor</label>
					<input type="text" class="form-control" id="autor" name="autor" value="<%=noticia[0].autor%>" placeholder="Autor da Notícia" />
					<br />
						<label>Data dos fatos</label>
						<% console.log(noticia[0]>0);%> 
						<% if (validacao.length) { %>
							<input type="date" class="form-control" id="data_n" name="data_n" value="<%=noticia[0].data_n%>" placeholder="Data da Notícia" />
						<% } else if(noticia[0].data_n.getMonth()<10 && noticia[0].data_n.getDate()>10){ %>
							<input type="date" class="form-control" id="data_n" name="data_n" value="<%=noticia[0].data_n.getFullYear()+'-'+0+noticia[0].data_n.getMonth()+'-'+noticia[0].data_n.getDate()%>" placeholder="Data da Notícia" />	
						<% } else if(noticia[0].data_n.getMonth()>10 && noticia[0].data_n.getDate()<10){ %>
								<input type="date" class="form-control" id="data_n" name="data_n" value="<%=noticia[0].data_n.getFullYear()+'-'+noticia[0].data_n.getMonth()+'-'+0+noticia[0].data_n.getDate()%>" placeholder="Data da Notícia" />
						<% }else{ %>
							<input type="date" class="form-control" id="data_n" name="data_n" value="<%=noticia[0].data_n.getFullYear()+'-'+0+noticia[0].data_n.getMonth()+'-'+0+noticia[0].data_n.getDate()%>" placeholder="Data da Notícia" />
						<%}%>
					<br />
					<label>Notícias</label>
					<textarea class="form-control" id="noticias" name="noticias"><%=noticia[0].noticias%></textarea>
					<br />
					<input type="submit" class="btn btn-default" value="Enviar"/>
				</form>
			</div>
		</div>
	</div>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>
</html>